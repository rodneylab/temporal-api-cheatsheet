{
	"name": "temporal-api-cheatsheet",
	"version": "0.0.1",
	"private": true,
	"license": "BSD-3-Clause",
	"description": "Temporal API Cheat Sheet: a quick guide to new JavaScript Temporal API including code snippets and example use cases.",
	"scripts": {
		"dev": "astro dev",
		"start": "astro dev",
		"build": "astro telemetry disable && astro build && subfont -ir --root dist",
		"preview": "astro preview",
		"check": "astro check --fail-on-warnings --ignore src/content/blog/**",
		"format": "prettier --write --plugin=prettier-plugin-astro .",
		"lint:css": "stylelint \"src/**/*.{astro,css,svelte}\"",
		"prettier:check": "prettier --check --plugin=prettier-plugin-astro ."
	},
	"devDependencies": {
		"@astrojs/check": "^0.9.4",
		"@commitlint/config-conventional": "^19.6.0",
		"@eslint/js": "^9.18.0",
		"@js-temporal/polyfill": "^0.4.4",
		"astro": "^4.16.18",
		"commitlint": "^19.6.1",
		"dotenv": "^16.4.7",
		"eslint-plugin-astro": "^1.3.1",
		"eslint-plugin-jsx-a11y": "^6.10.2",
		"globals": "^15.14.0",
		"husky": "^9.1.7",
		"postcss-html": "^1.8.0",
		"prettier": "^3.4.2",
		"prettier-plugin-astro": "^0.14.1",
		"stylelint": "^16.13.2",
		"stylelint-config-recommended": "^15.0.0",
		"subfont": "^7.2.1",
		"typescript": "^5.7.3",
		"typescript-eslint": "^8.21.0",
		"vite-node": "^3.0.2"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/rodneylab/temporal-api-cheatsheet"
	},
	"bugs": {
		"url": "https://github.com/rodneylab/temporal-api-cheatsheet/issues"
	}
}
