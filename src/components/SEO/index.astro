---
import Twitter from '$components/SEO/Twitter.astro';
import website from '$configuration/website';

const { author, siteUrl, twitterUsername } = website;

const { metadescription, title } = Astro.props;

const url = `${siteUrl}`;

const twitterProps = {
  author,
  image: '/assets/temporal-api-cheatsheet-twitter.png',
  twitterUsername,
};
---

<head>
  <title>{title}</title>
  <meta name="description" content={metadescription} />
  <meta
    name="robots"
    content="index, follow, max-snippet:-1, max-image-preview:large, max-video-preview:-1"
  />
  <link rel="canonical" href={url} />
  <Twitter {...twitterProps} />
</head>
